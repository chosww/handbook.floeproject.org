<div class="brand">
    {% if locale and locale !== config.defaultLanguage %}
    {% set homeUrl = "/" + config.languages[locale].slug %}
    {% else %}
    {% set lang = config.defaultLanguage %}
    {% set homeUrl = "/" %}
    {% endif %}

    <a class="brand__desktop" rel="home" href="{{ homeUrl }}"{% if page.url === homeUrl %} aria-current="page"{% endif %}>
        {%- svg_sprite "logo-ildh-wordmark", _("Inclusive Learning Design Handbook - Home"), false -%}
    </a>
    <a class="brand__mobile" id="logo-narrow" rel="home" href="{{ homeUrl }}"{% if page.url === homeUrl %} aria-current="page"{% endif %}>
        {%- svg_sprite "logo-ildh", _("Inclusive Learning Design Handbook - Home"), false -%}
    </a>
</div>
